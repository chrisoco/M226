<BorderPane prefHeight="780.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.tab.rent.RentController">
   <left>
      <BorderPane prefWidth="275.0" BorderPane.alignment="CENTER">
         <top>
            <JFXTextField fx:id="personSearch" labelFloat="true" onKeyReleased="#loadPersonSearchData" promptText="SEARCH PERSON" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
               </BorderPane.margin>
            </JFXTextField>
         </top>
         <center>
            <JFXListView fx:id="personListView" style="-fx-background-color: lightgray; -fx-font-family: Monospaced; -fx-font-weight: bold;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </left>
   <right>
      <BorderPane prefWidth="275.0" BorderPane.alignment="CENTER">
         <center>
            <JFXListView fx:id="bookListView" style="-fx-background-color: lightgray; -fx-font-family: Monospaced; -fx-font-weight: bold;" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <JFXTextField fx:id="bookSearch" labelFloat="true" onKeyReleased="#loadBookSearchData" promptText="SEARCH BOOK" BorderPane.alignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <BorderPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
               </BorderPane.margin>
            </JFXTextField>
         </top>
      </BorderPane>
   </right>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <JFXListView fx:id="rentOfPersonListView" style="-fx-background-color: gray;" BorderPane.alignment="CENTER">
               <BorderPane.margin>
                  <Insets bottom="10.0" top="10.0" />
               </BorderPane.margin></JFXListView>
         </center>
         <top>
            <StackPane BorderPane.alignment="CENTER">
               <children>
                  <GridPane prefHeight="200.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <JFXTextField fx:id="name" editable="false" labelFloat="true" promptText="NAME">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXTextField>
                        <JFXDatePicker fx:id="rentalStartCal" maxWidth="1.7976931348623157E308" promptText="Rental Start Date" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXDatePicker fx:id="rentalExpCal" maxWidth="1.7976931348623157E308" promptText="Rental Expires Date" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXDatePicker fx:id="rentalEndCal" maxWidth="1.7976931348623157E308" promptText="Rental END Date" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXComboBox fx:id="store" maxWidth="1.7976931348623157E308" promptText="Store + Location" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXComboBox>
                        <JFXButton fx:id="submit" buttonType="RAISED" prefHeight="40.0" prefWidth="100.0" ripplerFill="#f00909" text="SUBMIT" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets left="40.0" />
                           </GridPane.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="addBook" buttonType="RAISED" prefHeight="40.0" prefWidth="100.0" ripplerFill="#f00909" text="ADD Book" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <GridPane.margin>
                              <Insets right="40.0" />
                           </GridPane.margin>
                        </JFXButton>
                     </children>
                     <StackPane.margin>
                        <Insets top="20.0" />
                     </StackPane.margin>
                  </GridPane>
               </children>
            </StackPane>
         </top>
         <bottom>
            <JFXListView fx:id="rentCurrentListView" prefHeight="350.0" style="-fx-background-color: gray;" BorderPane.alignment="CENTER" />
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
