                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <JFXTextField fx:id="customerName" labelFloat="true" promptText="Customer Name">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXTextField>
                        <JFXDatePicker fx:id="rentalStartCal" editable="false" maxWidth="1.7976931348623157E308" onAction="#setExpCal" promptText="Rental Start Date" GridPane.rowIndex="1">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXDatePicker fx:id="rentalExpCal" editable="false" maxWidth="1.7976931348623157E308" onAction="#loadBookSearchData" promptText="Rental Expires Date" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <opaqueInsets>
                              <Insets />
                           </opaqueInsets>
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXDatePicker fx:id="rentalEndCal" editable="false" maxWidth="1.7976931348623157E308" promptText="Rental END Date" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXDatePicker>
                        <JFXComboBox fx:id="store" maxWidth="1.7976931348623157E308" onAction="#loadBookSearchData" promptText="Store + Location" GridPane.columnIndex="1">
                           <GridPane.margin>
                              <Insets left="40.0" right="40.0" />
                           </GridPane.margin>
                        </JFXComboBox>
                        <JFXButton fx:id="submit" buttonType="RAISED" prefHeight="40.0" prefWidth="100.0" ripplerFill="LIME" style="-fx-background-color: lightgray;" text="SUBMIT" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2">
                           <GridPane.margin>
                              <Insets left="40.0" />
                           </GridPane.margin>
                           <font>
                              <Font size="14.0" />
                           </font>
                        </JFXButton>
                        <JFXButton fx:id="addBook" buttonType="RAISED" prefHeight="40.0" prefWidth="100.0" ripplerFill="LIME" style="-fx-background-color: lightgray;" text="ADD Book" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
                           <font>
                              <Font size="14.0" />
                           </font>
                           <GridPane.margin>
                              <Insets right="40.0" />
                           </GridPane.margin>
                        </JFXButton>
                     </children>
                     <StackPane.margin>
                        <Insets top="20.0" />
